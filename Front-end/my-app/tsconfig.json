{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",  // Ou "react", dependendo do seu projeto
    "strict": true,         // (opcional, mas recomendado)
    "moduleResolution": "node",  // (recomendado)
    "esModuleInterop": true, // (recomendado para importações de módulos)
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/**/*"  // Ou o caminho onde seus arquivos .tsx estão localizados
  ]
}
